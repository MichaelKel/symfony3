{% extends 'LazyBlogBundle::layout.html.twig' %}

{% block title %}
    {{ 'post.plural' | trans }}
{% endblock %}

{% block sidebar %}
    <aside>
        <h3>{{ 'post.latest' | trans }}</h3>

        {% for post in posts %}
            <p><a class="aside" href="#">{{ post.title | trans | truncate(30) }} </a></p>
            {#{{ path:('lazyblog_lazyblog_post_show', { slug: post.slug }) }}#}
        {% endfor %}
    </aside>
{% endblock %}

{% block section %}
    {% for post in posts %}
        {{ include('LazyBlogBundle:Post:post.html.twig') }}
    {% endfor %}
{% endblock %}