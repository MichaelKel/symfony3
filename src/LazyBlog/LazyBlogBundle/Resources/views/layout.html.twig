{% extends '::base.html.twig' %}
{% set months = ['','января','февраля','марта','апреля','мая','июня','июля','августа','сентября','октября','ноября','декабря'] %}
{% set year = 'года.' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/lazyblog/css/main.css') }}"
{% endblock %}

{% block body %}
    <header>
        <p>
            LazyBlog
        </p>
        <nav>
            <ul>
                <li><a href="{{ path('lazyblog_lazyblog_post_index') }}">{{ 'home' | trans }}</a></li>
                {#<li><a href="#">{{ 'post.plural' | trans }}</a></li>#}
                {#<li><a href="#">{{ 'category' | trans }}</a></li>#}
            </ul>
        </nav>
    </header>

    {% block sidebar %}



    {% endblock %}
    <section>

        {% for type, messages in app.session.flashBag.all() %}
            {% for message in messages %}
                <p class="session-message">{{ message }}</p>
            {% endfor %}
        {% endfor %}

        {% block section %}{% endblock %}
    </section>

    <footer>
        <p>© {{ 'now' | date('Y') }} LazyBlog</p>
    </footer>
{% endblock %}