{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}
    User list
{% endblock %}

{% block section %}
    <h1>User list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Role</th>
            {#<th>Actions</th>#}
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.role }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('lazyblog_admin_user_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('lazyblog_admin_user_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lazyblog_admin_user_new') }}">
                Create a new user
            </a>
        </li>
    </ul>
{% endblock %}
